    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="/css/main/main.css">
    <%= yield_content :styles %>
    <link rel="stylesheet" href="/css/main/overrides.css">

    <!-- RSS -->
    <link id="mediumFeedLink" rel="alternate" type="application/rss+xml" title="Medium SS" href="https://medium.com/feed/@dannysmith">

    <!-- Facebook -->
    <meta property="og:site_name" content="danny.is/writing">
    <meta property="og:title" content="<%= yield_content :title %>">
    <meta property="og:description" content="Teacher. Engineer. People Geek. Blues Musician. Rubyist. Used to design things, now I teach others how to build them better. London, UK">

